		         android:text="7"
		         android:layout_weight="1" />
		
		          
		         
		           
		           <Button android:id="@+id/button8"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:text="8"
		         android:layout_weight="1" />
		           
		           <Button android:id="@+id/button9"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:text="9"
		         android:layout_weight="1" />          
           
             </LinearLayout>
             
              <LinearLayout
