<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/fondo" >
    
	

	 <LinearLayout
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_gravity="center_horizontal"
	     android:gravity="center"
	     android:padding="10dp"
	     android:orientation="horizontal" >
	     
	      <Button
	        android:id="@+id/btn1"
	        style="@style/DashboardButton"
	        android:drawableTop="@drawable/btn_informacion"
	        android:text="Ordenes de Compra"
	        android:padding="20dp"
	        android:textColor="#4d88b3"
	 		/>
	    
	      <Button
	        android:id="@+id/btn2"
	        style="@style/DashboardButton"
	        android:drawableTop="@drawable/btn_informacion"
	        android:text="Como tramitar un crédito"
	         android:padding="20dp"
	        android:textColor="#4d88b3"
			 />
	     <Button
	        android:id="@+id/btn3"
	        style="@style/DashboardButton"
	        android:drawableTop="@drawable/btn_informacion"
	        android:text="Pagos de servicios"
	         android:padding="20dp"
	        android:textColor="#4d88b3"
			/>
	     <Button
	        android:id="@+id/btn4"
	        style="@style/DashboardButton"
	        android:drawableTop="@drawable/btn_informacion"
	        android:text="¿Quienes pueden afiliarse?"
	         android:padding="20dp"
	        android:textColor="#4d88b3"
	 		/>
	 </LinearLayout>

    <LinearLayout
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_gravity="center_horizontal"
	     android:gravity="center"
	     android:padding="10dp"
	     android:orientation="horizontal" >

	    <Button
	        android:id="@+id/btn5"
	        style="@style/DashboardButton"
	        android:drawableTop="@drawable/btn_informacion"
	        android:text="¿Como Asociarse?"
	         android:padding="20dp"
	        android:textColor="#4d88b3"
	 		/>
	    <Button
	        android:id="@+id/btn6"
	        style="@style/DashboardButton"
	        android:drawableTop="@drawable/btn_informacion"
	        android:text="Beneficios de los ahorros"
	         android:padding="20dp"
	        android:textColor="#4d88b3"
			/>
	    <Button
	        android:id="@+id/btn7"
	        style="@style/DashboardButton"
	        android:drawableTop="@drawable/btn_informacion"
	        android:text="Ayuda por fallecimiento"
	         android:padding="20dp"
	        android:textColor="#4d88b3"
	 		/>
	    <Button
	        android:id="@+id/btn8"
	        style="@style/DashboardButton"
	        android:drawableTop="@drawable/btn_informacion"
	        android:text="Fondo de Ayuda por defunción"
	         android:padding="20dp"
	        android:textColor="#4d88b3"
			/>	
    </LinearLayout>
    
     <Button
        android:id="@+id/atras"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:background="@drawable/btn_blue"
        android:layout_gravity="center_horizontal"
        android:text="Atras"
      
        android:textColor="#fff" />
</LinearLayout>